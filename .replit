
modules = ["nodejs-20", "python-3.12", "bash", "postgresql-16"]
run = "cd app && npm run dev"

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run CityCatalyst Fast"

[[workflows.workflow]]
name = "Run CityCatalyst"
author = 24359658
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node app/scripts/setup-env.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npx sequelize-cli db:migrate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npx sequelize-cli db:seed:all"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npm run dev"

[[workflows.workflow]]
name = "Run CityCatalyst Fast"
author = 24359658
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node app/scripts/setup-env.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npx sequelize-cli db:migrate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npm run dev"

[deployment]
run = ["npm", "start"]
deploymentTarget = "cloudrun"
build = ["npm", "run", "build"]
workingDirectory = "."

[env]
NODE_ENV = "production"
REPLIT_DISABLE_PACKAGE_LAYER = "1"
REPLIT_KEEP_PACKAGE_DEV_DEPENDENCIES = "0"

[[ports]]
localPort = 3000
externalPort = 80
