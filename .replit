[deployment]
run = ["sh", "-c", "bash start.sh"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "bash deploy.sh"]
workingDirectory = "app"

[[ports]]
localPort = 3000
externalPort = 80
