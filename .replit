modules = ["nodejs-20", "python-3.12", "bash", "postgresql-16"]
run = "cd app && npm run dev"

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run CityCatalyst Fast"

[[workflows.workflow]]
name = "Run CityCatalyst"
author = 24359658
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node app/scripts/setup-env.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npx sequelize-cli db:migrate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npx sequelize-cli db:seed:all"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd app && npm run dev"

